<h2>Cadastro de nova promoção</h2>

<% if  @promotion.errors.any? %>
  <div>
    <h4>Para salvar é necessário corrigir <%= pluralize(@promotion.errors.count, "erro") %>: </h4>
    <ul>
    <% @promotion.errors.each do |error| %>
      <li style='color: red;'><%= error.full_message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @promotion do |f| %>
  <%= f.label :name, 'Nome' %><br>
  <%= f.text_field :name %><br>

  <%= f.label :description, 'Descrição' %><br>
  <%= f.text_field :description %><br>
  
  <%= f.label :code, 'Código' %><br>
  <%= f.text_field :code %><br>
  
  <%= f.label :discount_rate, 'Desconto' %><br>
  <%= f.text_field :discount_rate %><br>
  
  <%= f.label :coupon_quantity, 'Quantidade de cupons' %><br>
  <%= f.text_field :coupon_quantity %><br>
  
  <%= f.label :expiration_date, 'Data de término' %><br>
  <%= f.text_field :expiration_date %><br>
  
  <%= f.submit 'Criar promoção' %>
<% end %>

